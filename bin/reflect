#!/usr/bin/env python
""" CLI

Example:
    % reflect --help
"""
import fire

from reflection import reflection
from reflection import drawing


def main():
    """ Main entry. """
    line = [(-2, 0), (2, 0)]
    triangle = [(-1, 0), (0, 4), (1, 0)]
    rectangle = [(-1, 0), (-1, 4), (1, 4), (1, 0)]
    square = [(-1, -1), (-1, 1), (1, 1), (1, -1)]

    for shape in [line, triangle, rectangle, square]:
        drawing.draw_multiple_points(shape)
        drawing.draw_one_point(reflection.find_center(shape), style="kx")
        drawing.draw()


if __name__ == '__main__':
    fire.Fire(main)
