#!/usr/bin/env python
""" CLI

Example:
    % reflect --help
"""
import fire

from reflection import reflection, drawing
from tests.helpers import regular_polygon


def main():
    """ Main entry. """
    two_horiz_points = [(-2, 0), (2, 0)]
    two_vert_points = [(0, 2), (0, -2)]
    rectangle = [(-2, 0), (-2, 2), (2, 2), (2, 0)]
    isosceles_triangle = [(-1, 0), (0, 4), (1, 0)]

    for shape in [
        two_horiz_points,
        two_vert_points,
        isosceles_triangle,
        regular_polygon(n=3),
        rectangle,
        regular_polygon(n=4),
        regular_polygon(n=5),
        regular_polygon(n=6),
        regular_polygon(n=7),
    ]:
        drawing.draw_multiple_points(shape, style="ko")
        lor = reflection.find_lines_of_reflection(shape)
        print(f"shape has {len(shape)} points and {len(lor)} lines of reflection")
        print(lor)
        drawing.draw_multiple_lines(lor, "k:")
        drawing.draw()


if __name__ == "__main__":
    fire.Fire(main)
